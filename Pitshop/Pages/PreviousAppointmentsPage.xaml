<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pitshop.Pages.PreviousAppointmentsPage"
             Title="PreviousAppointmentsPage">
    <StackLayout>
        <Button Text="Home" Clicked="HomeButtonClicked" CornerRadius="0"
        BackgroundColor="Black"/>
        <ListView x:Name="AppointmentsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                      Detail="{Binding DateTime, StringFormat='{0:MM/dd/yyyy hh:mm tt}'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>